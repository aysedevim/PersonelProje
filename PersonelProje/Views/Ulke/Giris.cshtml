@model PersonelProje.Data.Ulke
@*//ulke class içerisinde iki propeties var. inputlar içerisindeki nameler bu class içerisindeki propertiesler ile aynı olursa string ıd,string yeniverilenisim
yerine ulke ulke şeklinde yazılabilir.*@

@{
    ViewData["Title"] = "Giris";
}

<h1>Giriş İşlemi</h1>
<div class="row">
    <div class="col-md-5">
       
        <form method="post">
            <div>
                <label>Id</label>
                <input class="form-control"  type="text" value="@Model.Id" name="Id" /> 
            </div>
            <div>
                <label>Ad</label>
                <input class="form-control" type="text" value="@Model.UlkeAdi" name="UlkeAdi" />
            </div>
            <input class="btn btn-primary" type="submit" value="Kaydet"/>
        </form>
    </div>
</div>

