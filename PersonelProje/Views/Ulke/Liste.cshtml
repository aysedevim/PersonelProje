@*@using PersonelProje.Data*@
@model List<PersonelProje.Data.Ulke>
@{
    ViewData["Title"] = "Liste";
}

<h1>Ülke Liste</h1>
<div class="row">
    <div class="col-md-7">
        
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UlkeAdi</td>
                        <td><a class ="btn btn-danger" href="/Ulke/Sil/@item.Id ">Sil</a></td>
                        <td><a class ="btn btn-success" href="/Ulke/Guncel/@item.Id ">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    
        <a class="btn btn-primary" href="/Ulke/Giris">Yeni Giriş</a>
        
    </div>

</div>
